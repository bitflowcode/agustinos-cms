// api/upload-image.js - Proxy corregido para upload de imÃ¡genes
import axios from 'axios';

export const config = {
  api: {
    bodyParser: false,
    responseLimit: false,
  },
};

export default async function handler(req, res) {
  if (req.method !== 'POST') {
    return res.status(405).json({ error: 'Method not allowed' });
  }

  res.setHeader('Access-Control-Allow-Origin', '*');
  res.setHeader('Access-Control-Allow-Methods', 'POST');
  res.setHeader('Access-Control-Allow-Headers', 'Authorization, Content-Type');

  try {
    console.log('ğŸš€ [UPLOAD] Proxying image upload...');
    console.log('ğŸ”— Content-Type:', req.headers['content-type']);
    console.log('ğŸ”‘ Authorization:', req.headers.authorization ? 'Present' : 'Missing');
    
    // SOLUCIÃ“N COMPLETA: URL correcta + headers completos + streaming + auth
    const response = await axios.post(
      'http://49.12.239.163:3002/api/upload/image',  // âœ… URL con puerto correcto
      req,  // âœ… Stream del request directo
      {
        headers: {
          'Authorization': req.headers.authorization || '',  // âœ… Token JWT requerido
          'Content-Type': req.headers['content-type'] || '', // âœ… multipart/form-data con boundary
          'host': undefined, // âœ… Limpiar host header
        },
        responseType: 'stream',     // âœ… Response como stream
        maxContentLength: Infinity,  // âœ… Sin lÃ­mite de contenido
        maxBodyLength: Infinity,     // âœ… Sin lÃ­mite de body
        timeout: 30000,             // âœ… 30 segundos timeout
      }
    );

    console.log('âœ… [UPLOAD] Response status:', response.status);
    
    // âœ… Configurar headers de respuesta
    res.setHeader('Content-Type', response.headers['content-type'] || 'application/json');
    
    // âœ… Stream directo sin cargar en memoria - EVITA ERROR 500
    response.data.pipe(res);

  } catch (error) {
    console.error('âŒ [UPLOAD] Error:', error.message);
    
    if (error.response) {
      console.error('ğŸ“‹ Error status:', error.response.status);
      console.error('ğŸ“‹ Error headers:', Object.keys(error.response.headers || {}));
      
      res.status(error.response.status);
      
      // Si la respuesta es stream, hacer pipe
      if (error.response.data && typeof error.response.data.pipe === 'function') {
        error.response.data.pipe(res);
      } else {
        // Si no es stream, devolver error JSON
        res.json({ 
          success: false,
          error: 'Backend error', 
          status: error.response.status,
          details: error.response.statusText
        });
      }
    } else if (error.code === 'ECONNREFUSED') {
      res.status(503).json({
        success: false,
        error: 'Cannot connect to backend server',
        details: 'Backend server is not running or unreachable'
      });
    } else {
      res.status(500).json({
        success: false,
        error: 'Proxy error',
        details: error.message
      });
    }
  }
}